<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.aximov.sleeplogger.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <action
            android:id="@+id/action_FirstFragment_to_createSleepRecordActivity"
            app:destination="@id/createSleepRecordActivity" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.aximov.sleeplogger.DetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_createSleepRecordActivity"
            app:destination="@id/createSleepRecordActivity" />
    </fragment>
    <activity
        android:id="@+id/createSleepRecordActivity"
        android:name="com.aximov.sleeplogger.CreateSleepRecordActivity"
        android:label="activity_create_sleep_record"
        tools:layout="@layout/activity_create_sleep_record" />
</navigation>
